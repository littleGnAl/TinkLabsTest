<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    >
  <android.support.v7.widget.AppCompatImageView
      android:id="@+id/img_adapter_home_item_normal"
      android:layout_width="150dp"
      android:layout_height="100dp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      />
  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_adapter_home_item_normal_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="16sp"
      android:textColor="#323232"
      android:layout_marginStart="10dp"
      app:layout_constraintLeft_toRightOf="@+id/img_adapter_home_item_normal"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="ggggggg"
      />
  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_adapter_home_item_normal_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:textSize="13sp"
      android:textColor="#888888"
      android:maxLines="3"
      android:ellipsize="end"
      android:layout_marginEnd="16dp"
      app:layout_constraintLeft_toLeftOf="@+id/tv_adapter_home_item_normal_title"
      app:layout_constraintTop_toBottomOf="@+id/tv_adapter_home_item_normal_title"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      tools:text="bjbjbjjbjbjbjjbjbjbjbjbjbjjbjbjbjbjbjbjbjjbjbjbjbjjbbjbjbjjbjbjbjjbjbjbjbjbjbjjbjbjbjbjbjbjbjjbjbjbjbjjbbjbjbjjbjbjbjjbjbjbjbjbjbjjbjbjbjbjbjbjbjjbjbjbjbjjbbjbjbjjbjbjbjjbjbjbjbjbjbjjbjbjbjbjbjbjbjjbjbjbjbjjbbjbjbjjbjbjbjjbjbjbjbjbjbjjbjbjbjbjbjbjbjjbjbjbjbjjb"
      />
</android.support.constraint.ConstraintLayout>